/* This devicetree overlay file will be automatically picked by the Zephyr
 * build system when building the sample for the apard32690 board. 
 */

/ {
    aliases {
        ambient-temp0 = &temp0;
    };
};

&pmod_spi {
    status = "okay";

    temp0: max31723@0 {
        compatible = "adi,max31723";
        status = "okay";
        reg = <0>;
        spi-max-frequency = <1000000>;
        // oneshot_mode;
        resolution = <3>;
        thermostat_mode = <1>;
    };
};
